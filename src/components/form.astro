---
import Result from "./result.astro"
---
<div class="rounded-lg shadow-2xl shadow-[#8FAECF25] bg-white p-5 sm:p-8 flex flex-col gap-6">
  <div class="text-fm_gunmetal font-semibold text-2xl leading-9">
    <h2>
      Enter your details below
    </h2>
  </div>

  <div class="flex justify-between">
    <div class="w-full flex items-center gap-2 lg:gap-5">

      <div class="w-full">
        <label for="metric" class="cursor-pointer">
          <div class="flex gap-2 items-center">
            <input type="radio" name="method" id="metric" class="hidden peer" />
            <div class="w-[31px] h-[31px] rounded-full border-fm_borders border-[1px] peer-checked:border-none peer-checked:bg-[#345FF615] flex justify-center items-center *:peer-checked:bg-fm_blue">
              <div class="w-[15px] h-[15px] rounded-full "></div>
            </div>
            <div class="font-semibold text-4 leading-9 text-fm_gunmetal" >
              Metric
            </div>
          </div>
        </label>
      </div>

      <div class="w-full">
        <label for="imperial" class="cursor-pointer">
          <div class="flex gap-2 items-center">
            <input type="radio" name="method" id="imperial" class="hidden peer"/>
            <div class="w-[31px] h-[31px] rounded-full border-fm_borders border-[1px] peer-checked:border-none peer-checked:bg-[#345FF615] flex justify-center items-center *:peer-checked:bg-fm_blue">
              <div class="w-[15px] h-[15px] rounded-full bg-transparent"></div>
            </div>
            <div class="font-semibold text-4 leading-9 text-fm_gunmetal">
              Imperial
            </div>
          </div>
        </label>
      </div>

    </div>
  </div>

  <div class="flex flex-col gap-3 lg:flex-row lg:gap-5">
    <div class="w-full flex flex-col gap-2"> 
      <div>
        <label for="height" class="text-sm text-[#5E6E85]">Height</label>
      </div>
      <div class="flex gap-3 px-6 py-4 border-solid border-fm_borders rounded-md border-[1px] w-full">
        <input type="text"  name="height" class="text-2xl font-semibold text-fm_gunmetal focus:outline-none w-full" value="185"/>
        <div class="text-fm_blue text-2xl font-semibold">
          cm
        </div>
      </div>
    </div>

    <div class="w-full flex flex-col gap-2"> 
      <div>
        <label for="weight" class="text-sm text-[#5E6E85]">Weight</label>
      </div>
      <div class="flex gap-3 px-6 py-4 border-solid border-fm_borders rounded-md border-[1px] w-full">
        <input type="text"  name="weight" class="text-2xl font-semibold text-fm_gunmetal focus:outline-none w-full" value="80"/>
        <div class="text-fm_blue text-2xl font-semibold">
          kg
        </div>
      </div>
    </div>
    
  </div>

  <Result value="22.00"
  range="18.5 - 24.9"
  classification="Normal"
  />
</div>