---
interface Props {
  image: string;
  title: string;
  description: string;
}
const { image, title, description, }: Props = Astro.props;
---

<div class="flex flex-col gap-4 w-full sm:flex-row sm:gap-8 lg:flex-col">
  <div class="mb-4 sm:flex sm:items-center">
    <picture class="w-16 h-16">
      <img src={`/assets/images/${image}`} alt="icon" width="64px" height="64px">
    </picture>
  </div>
  <div class="flex flex-col gap-4 w-full">
    <div>
      <h3 class="text-fm_gunmetal leading-9 tracking-tight text-2xl">
    {title}  
    </h3></div>
    <div>
      <p class="text-fm_dark_electric_blue text-base">{description}</p>
    </div>
  </div>
</div>
