---
interface Props {
  image: string;
  title: string;
  description: string;
}
const { image, title, description }: Props = Astro.props;
---

<div class="flex flex-col gap-4 p-6 shadow-lg shadow-fm_gradient_to rounded-lg w-full" >
  <div class="flex justify-start gap-3">
    <picture>
      <img src={`/assets/images/${image}`} alt="icon limitation" width="32px" height="32px">
    </picture>
    <div>
      <h2 class="font-semibold text-fm_gunmetal text-5 leading-9 tracking-tight" >
        {title}
      </h2>
    </div>
  </div>
  <div>
    <p  class="text-fm_dark_electric_blue text-base ">
      {description}
    </p>
  </div>
</div>
